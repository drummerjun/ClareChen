<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:focusable="true"
    android:clickable="true">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout android:id="@+id/group_girls"
        style="@style/LinearLayout.GuillotineItem">
        <ImageView
            style="@style/ImageView.GuillotineItem"/>
        <com.drummerjun.clarechen.ui.widget.CCTextView
            style="@style/TextView.GuillotineItem.GirlSelected"
            android:text="@string/for_her" />
    </LinearLayout>

    <LinearLayout android:id="@+id/group_boys"
        style="@style/LinearLayout.GuillotineItem">
        <ImageView
            style="@style/ImageView.GuillotineItem"/>
        <com.drummerjun.clarechen.ui.widget.CCTextView
            style="@style/TextView.GuillotineItem.BoySelected"
            android:text="@string/for_him" />
    </LinearLayout>

    <LinearLayout android:id="@+id/group_all"
        style="@style/LinearLayout.GuillotineItem">
        <ImageView
            style="@style/ImageView.GuillotineItem"/>
        <com.drummerjun.clarechen.ui.widget.CCTextView
            style="@style/TextView.GuillotineItem.Selected"
            android:text="@string/for_all" />
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_divider_height" />

    <!--<LinearLayout android:id="@+id/settings_group"-->
        <!--style="@style/LinearLayout.GuillotineItem">-->
        <!--<ImageView-->
            <!--style="@style/ImageView.GuillotineItem"/>-->
        <!--<com.drummerjun.clarechen.ui.widget.CCTextView-->
            <!--style="@style/TextView.GuillotineItem"-->
            <!--android:text="Settings" />-->
    <!--</LinearLayout>-->

    <LinearLayout android:id="@+id/settings_lang"
        style="@style/LinearLayout.GuillotineItem"
        android:gravity="center">
        <TextView android:id="@+id/en_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular"
            android:gravity="center"
            android:textColor="@color/active_color"
            android:textStyle="bold"
            android:text="EN"/>

        <View
            android:layout_width="@dimen/guillotine_medium_margin"
            android:layout_height="match_parent"/>

        <TextView android:id="@+id/tw_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular"
            android:gravity="center"
            android:textColor="@color/active_color"
            android:textStyle="bold"
            android:text="繁"/>

        <View
            android:layout_width="@dimen/guillotine_medium_margin"
            android:layout_height="match_parent"/>

        <TextView android:id="@+id/cn_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular"
            android:gravity="center"
            android:textColor="@color/active_color"
            android:textStyle="bold"
            android:text="简"/>
    </LinearLayout>


</LinearLayout>